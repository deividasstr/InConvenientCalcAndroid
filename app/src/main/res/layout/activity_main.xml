<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.davidos.inconvenientcalcandroid.MainActivity"
    android:background="#009900"
    fontPath="fonts/ComingSoon.ttf">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/calculationTextView"
        android:textSize="60sp"
        android:singleLine="true"
        android:layout_below="@+id/processTextView"
        android:layout_centerInParent="true"
        android:maxLength="8"
        android:textColor="#000000"
        android:background="@drawable/textview"
        android:textAlignment="textEnd"
        android:paddingEnd="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/processTextView"
        android:textSize="30sp"
        android:singleLine="true"
        android:layout_below="@+id/grid"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"
        android:textColor="#b11717"
        android:layout_centerInParent="true"
        android:textAlignment="viewEnd"
        android:scrollHorizontally="false"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:ellipsize="start"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true">

        <Button
            android:text="6"
            android:id="@+id/button6"
            android:layout_column="0"
            android:layout_row="0"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="2"
            android:id="@+id/button2"
            android:layout_column="1"
            android:layout_row="0"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="8"
            android:id="@+id/button8"
            android:layout_column="2"
            android:layout_row="0"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="1"
            android:id="@+id/button1"
            android:layout_column="0"
            android:layout_row="1"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="9"
            android:id="@+id/button9"
            android:layout_column="1"
            android:layout_row="1"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="4"
            android:id="@+id/button4"
            android:layout_column="2"
            android:layout_row="1"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="7"
            android:id="@+id/button7"
            android:layout_column="0"
            android:layout_row="2"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="3"
            android:id="@+id/button3"
            android:layout_column="1"
            android:layout_row="2"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="5"
            android:id="@+id/button5"
            android:layout_column="2"
            android:layout_row="2"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="-"
            android:id="@+id/buttonMinus"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:layout_gravity="fill_horizontal"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="0"
            android:id="@+id/button0"
            android:layout_column="2"
            android:layout_row="3"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="+"
            android:id="@+id/buttonPlus"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="*"
            android:id="@+id/buttonMultiply"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="/"
            android:id="@+id/buttonDivide"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:layout_gravity="fill_horizontal"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="."
            android:id="@+id/buttonDot"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:layout_gravity="fill_horizontal"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="C"
            android:id="@+id/buttonC"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:layout_gravity="fill_horizontal"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>
        <Button
            android:text="="
            android:id="@+id/buttonEquals"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:layout_gravity="fill_horizontal"
            style="@style/buttonStyle"
            android:background="@drawable/button_shape"
            android:textSize="45sp"
            android:onClick="clicked"/>

        <Space/>

    </GridLayout>

</RelativeLayout>
